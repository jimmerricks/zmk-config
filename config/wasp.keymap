        bm: bottom_row_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "bottom row mods";
            #binding-cells = <2>;
            tapping_term_ms = <240>;
            quick_tap_ms = <180>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
