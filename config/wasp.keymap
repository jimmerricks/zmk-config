#define SL(KEY) &nl KEY KEY
#define SK(KEY) &nk KEY KEY
#define SQ(KEY) &nq KEY KEY
#define BMG(KEY) &bm LGUI KEY
#define CAPSWORD &caps_word

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                                    &kp W     &kp G     &kp D     &kp B           &kp J     &kp F     &kp O     &kp U
                &kp FSLH  &kp R     &kp S     &kp T     &kp H     &kp V           &kp Y     &kp N     &kp A     &kp I     &kp L     &kp SEMI
                          BMG(X)    &kp C     &kp M     &kp K     &kp Q           &kp Z     &kp P     &kp APOS  &kp COMMA BMG(DOT)
                                                        SL(NUM_L) &kp SPACE       &kp E     SL(NAV_L)
            >;
        };

        num_layer {
            label = "Nav";
            bindings = <
                                    &kp HOME  &kp UARW  &kp END   &kp PG_UP       &trans    CAPSWORD  &trans    &trans
                &kp LC(C) &kp LC(Y) &kp LARW  &kp DARW  &kp RARW  &kp PG_DN       &trans    SQ(LSHFT) SK(LCTRL) SK(LALT)  SK(LGUI)  &trans
                          &kp LC(Z) &kp ESC   &kp TAB   &kp RET   &kp LS(INS)     &trans    SQ(RSHFT) SK(RCTRL) SK(RALT)  SK(RGUI)
                                                    &lt NUM_L DEL &kp BSPC        &trans    &trans
            >;
        };

        nav_layer {
            label = "Num";
            bindings = <
                                    &trans    &trans    CAPSWORD  &trans          &kp ASTRK &kp N7    &kp N8    &kp N9
                &trans    SK(LGUI)  SK(LALT)  SK(LCTRL) SQ(LSHFT) &trans          &kp SLASH &kp N4    &kp N5    &kp N6    &kp MINUS &trans
                          SK(RGUI)  SK(RALT)  SK(RCTRL) SQ(RSHFT) &trans          &trans    &kp N1    &kp N2    &kp N3    &kp PLUS
                                                        &trans    &trans          &kp N0    &lt NAV_L DOT
            >;
        };

    };
};
